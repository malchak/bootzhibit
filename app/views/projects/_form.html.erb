<div class="container">
	<%= form_for @project, :url => projects_path, :html => { :multipart => true} do |form| %>
	<div class="project-fields">
		<p><%= form.text_field :name, :placeholder => "Project Name" %></p>
		<p><%= form.text_field :url,  :placeholder => "http://www.projecturl.com" %></p>
		<p><%= form.text_area	:description, :placeholder => "Tell us about your project" %></p>
		<p><%= form.file_field :avatar %></p>
	</div>
	<div class="member-fields">
		<p>Project Team</p>
		<div>	
			<%= form.fields_for :boots, @boot do |builder| %>
			<p><%= builder.text_field :first_name %></p>
			<p><%= builder.text_field :last_name %></p>
			<p><%= builder.text_field :cohort %></p>
			<p><%= builder.file_field :avatar %></p>
			<% end %>
		</div>

		<%= link_to "Add Team Member" %>
	</div>

	<p><%= form.submit %></p>
	<% end %>

</div class="container">
